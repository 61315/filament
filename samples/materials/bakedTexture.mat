material {
    name : BakedTexture,
    flipUV : true,
    parameters : [
        {
            type : sampler2d,
            name : albedo
        }
    ],
    requires : [
        uv0
    ],
    shadingModel : unlit,
}

fragment {
    void material(inout MaterialInputs material) {
        prepareMaterial(material);
        material.baseColor.rgb = inverseTonemap(texture(materialParams_albedo, getUV0()).rgb);
        material.baseColor.a = 1.0;
    }
}
